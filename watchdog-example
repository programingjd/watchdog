set -e

start() {
  if (($(ps -edf | grep /home/admin/repos/watchdog/watchdog.sh | grep example | wc -l) > 0))
  then
    echo 'Already running' && false
  else
    echo 'Starting...'
    sudo -H -u admin /home/admin/repos/watchdog/watchdog.sh example >/dev/null &
    echo 'Service started' >&2
  fi
}

stop() {
  if (($(ps -edf | grep /home/admin/repos/watchdog/watchdog.sh | grep example | wc -l) > 0))
  then
    echo 'Stopping...'
    ps -edf | grep /home/admin/repos/watchdog/watchdog.sh | grep example | awk '{print $2}' | xargs kill
    echo 'Stopped' >&2
  else
    echo 'Not running' >&2
    return 1
  fi
}

status() {
  if (($(ps -edf | grep /home/admin/repos/watchdog/watchdog.sh | grep example | wc -l) > 0))
  then
    echo "Running" && true
  else
    echo "Not running" && false
  fi
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  status)
    status
    ;;
  *)
    echo "Usage: $0 {start|stop|status}"
esac
